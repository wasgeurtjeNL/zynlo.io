# ============================================
# SUPABASE CONFIGURATION (Required)
# ============================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Service role key - only for server-side operations
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_SERVICE_KEY=your-service-role-key

# ============================================
# GOOGLE OAUTH (Optional - for Gmail integration)
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# EMAIL WEBHOOK (Optional - for email processing)
# ============================================
EMAIL_WEBHOOK_SECRET=your-webhook-secret

# ============================================
# API SERVER CONFIGURATION (Optional)
# ============================================
# API server URL for webhook endpoints
NEXT_PUBLIC_API_URL=http://localhost:3001
PORT=3001

# ============================================
# SPAM DETECTION API KEYS (Optional)
# ============================================
AKISMET_API_KEY=your-akismet-key
PUBLIC_URL=https://your-app-domain.com

# ============================================
# DEVELOPMENT SETTINGS (Local only)
# ============================================
# Only use these in development
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development 